                android:id="@+id/table_8_place_points"/>
        </TableRow>

        <!-- row 9 -->
        <TableRow>
            <TextView android:text="9"
                android:id="@+id/table_9_place"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/table_9_place_name"/>
            <TextView
                android:id="@+id/table_9_place_points"/>
        </TableRow>

        <!-- row 10 -->
        <TableRow>
            <TextView android:text="10"
                android:id="@+id/table_10_place"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/table_10_place_name"/>
            <TextView
                android:id="@+id/table_10_place_points"/>
        </TableRow>

    </android.widget.TableLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/high_scores_table"
        android:layout_above="@id/record_back"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/record_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="@dimen/default_margin"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        app:icon="@drawable/left_arrow"
        />


</RelativeLayout>